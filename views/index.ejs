<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" dir="ltr">
 
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
 
  <%- include partials/header.ejs %>
 
  <title>Flight Interface</title>
</head>

<body>
	<!-- HEADER -->
	<%- include partials/navigation.ejs %>
	
	<!-- Welcome Text -->
    <div class="container text-center">	      
        <h1>Welcome to the Karol's Flight Search Interface</h1>
        <p class="lead">Use the below forms to find your desired departure and return flights! Have a nice trip!</p>
		<img id="airplane_logo" src="images/airplane_logo.png" />	      
    </div>
	
	<!-- Search Forms Container -->
	<div class="container" id="DataContainer">
	  <div class="row">
	    <div class="col-sm-6"> 
			<!-- Departures Form -->
			<h4>DEPARTURES</h4>				
			<form id="DepartureForm">
			    <div class="form-group">
			        <input class="form-control" id="DepartureFrom" name="From" placeholder="From Location">
			    </div>
			    <div class="form-group">
			         <input class="form-control" id="DepartureTo" name="To" placeholder="To Location">
			    </div>
			    <div class="form-group">
			  	    <div class="input-group date" data-provide="datepicker">
			    	     <input type="text" class="form-control" id="DepartureDate" name="date" placeholder="Travel Date"><span 						 class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
			  	    </div>
		  	    </div>
			    <button type="submit" id="departures_submit_button" class="btn btn-default">Search</button>
			    <input type="hidden" id="departure_airlines" name="airline">
			    <input type="hidden" id="departure_from_airport_code" name="from_airport_code">
			    <input type="hidden" id="departure_to_airport_code" name="to_airport_code">
			</form>
			
			<!-- Placeholders for loading animation, flights table and errors -->
			<div id="DeparturesLoading" class="text-center"></div>
			<div id="DeparturesTablePlaceholder"></div>
			<div id="DeparturesError" class="text-center"></div>
			
		</div> <!--/class="col-sm-6" -->
		<div class="col-sm-6"> 
			<!-- Returns Form -->
			<h4>RETURNS</h4>
			<form id="ReturnForm">
			    <div class="form-group">
			         <input class="form-control" id="ReturnFrom" name="From" placeholder="From Location">
			    </div>
			    <div class="form-group">
			         <input class="form-control" id="ReturnTo" name="To" placeholder="To Location">
			    </div>
			    <div class="form-group">
			  	    <div class="input-group date" data-provide="datepicker">
			    	    <input type="text" class="form-control" id="ReturnDate" name="date" placeholder="Travel Date"><span 					    class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
			  	    </div>
		  	    </div>
			    <button type="submit" class="btn btn-default" id="returns_submit_button">Search</button>
			    <input type="hidden" id="return_airlines" name="airline">
			    <input type="hidden" id="return_from_airport_code" name="from_airport_code">
			    <input type="hidden" id="return_to_airport_code" name="to_airport_code">
			</form>
			
			<!-- Placeholders for loading animation, flights table and errors -->
			<div id="ReturnsLoading" class="text-center"></div>
			<div id="ReturnsTablePlaceholder"></div>
			<div id="ReturnsError" class="text-center"></div>
			
		</div> <!--/class="col-sm-6" -->
	  </div> <!--/class="row" -->
	</div> <!--/class="container" -->
	
	<!-- Modals placeholder -->
	<div id="DeparturesModalPlaceholder"></div>
	<div id="ReturnsModalPlaceholder"></div>
	
	<!-- FOOTER - contains included javascript files -->
	<%- include partials/footer.ejs %>	
		 
</body>
</html>